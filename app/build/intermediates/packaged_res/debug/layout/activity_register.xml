<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/register"
    tools:context=".RegisterActivity">
    <ImageView
        android:id="@+id/Login_logo"
        android:layout_width="146dp"
        android:layout_height="82dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="1dp"
        app:srcCompat="@drawable/melogo" />

    <EditText
        android:id="@+id/mEdtRegName"
        android:layout_width="300dp"
        android:layout_height="100dp"
        android:layout_below="@+id/Login_logo"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="32dp"
        android:layout_marginRight="15dp"
        android:hint="Name"
        android:inputType="text"
        android:padding="20dp"
        android:textColor="#FFFFFF"
        android:textColorHint="@color/white"
        android:textSize="17dp"
        android:textStyle="italic" />


    <EditText
        android:id="@+id/mEdtRegEmail"
        android:layout_width="300dp"
        android:layout_height="100dp"
        android:layout_below="@+id/Login_logo"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="140dp"
        android:layout_marginRight="15dp"
        android:hint="Email"
        android:inputType="text"
        android:padding="20dp"
        android:textColor="#FFFFFF"
        android:textColorHint="@color/white"
        android:textSize="17dp"
        android:textStyle="italic" />

    <EditText
        android:id="@+id/mEdtRegPhoneNumber"
        android:layout_width="300dp"
        android:layout_height="100dp"
        android:layout_below="@+id/Login_logo"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="228dp"
        android:layout_marginRight="15dp"
        android:hint="Phone Number eg..07****"
        android:inputType="text"
        android:padding="20dp"
        android:textColor="#FFFFFF"
        android:textColorHint="@color/white"
        android:textSize="17dp"
        android:textStyle="italic" />

    <EditText
        android:id="@+id/mEdtRegPassword"
        android:layout_width="300dp"
        android:layout_height="100dp"
        android:layout_below="@+id/Login_logo"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="323dp"
        android:layout_marginRight="15dp"
        android:hint="Enter Password "
        android:inputType="textPassword"
        android:padding="20dp"
        android:textColor="#FFFFFF"
        android:textColorHint="@color/white"
        android:textSize="17sp"
        android:textStyle="italic|bold" />

    <Button
        android:id="@+id/mBtnCreateAccount"
        android:layout_width="297dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/mEdtRegPassword"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="false"
        android:layout_marginStart="46dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="73dp"
        android:layout_marginRight="15dp"
        android:layout_marginBottom="89dp"
        android:padding="20dp"
        android:text="Register Here"
        android:textAllCaps="false"
        android:textColor="#FFFFFF"
        android:textSize="20dp" />


</RelativeLayout>